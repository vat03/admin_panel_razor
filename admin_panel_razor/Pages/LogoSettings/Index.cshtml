@page
@model admin_panel_razor.Pages.LogoSettings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Game Settings</h1>
<h4>Logo Settings</h4>

<div class="row">
    <div class="col-md-3">
        <br />
        <a class="btn btn-outline-primary" href="/GeneralSettings">General Settings</a>
        <br /><br />
        <a class="btn btn-primary" href="/LogoSettings">Logo Settings</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/GameConfig">Game Config</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/SocialMedia">Social Media</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/ContactUs">Contact Us</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/AboutUs">About Us</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/TermsAndConditions">Terms & Condition</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/PrivacyPolicies">Privacy Policy</a>
    </div>

    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="HeaderLogoFile">Header Logo</label>
                <input type="file" class="form-control" id="HeaderLogoFile" name="HeaderLogoFile" />
                @if (Model.LogoSetting?.HeaderLogo != null)
                {
                    <img src="@Model.LogoSetting.HeaderLogo" alt="Header Logo" style="width: 100px; height: auto;" />
                }
            </div>
            <div class="form-group">
                <label for="FooterLogoFile">Footer Logo</label>
                <input type="file" class="form-control" id="FooterLogoFile" name="FooterLogoFile" />
                @if (Model.LogoSetting?.FooterLogo != null)
                {
                    <img src="@Model.LogoSetting.FooterLogo" alt="Footer Logo" style="width: 100px; height: auto;" />
                }
            </div>
            <div class="form-group">
                <label for="FaviconFile">Favicon</label>
                <input type="file" class="form-control" id="FaviconFile" name="FaviconFile" />
                @if (Model.LogoSetting?.Favicon != null)
                {
                    <img src="@Model.LogoSetting.Favicon" alt="Favicon" style="width: 32px; height: 32px;" />
                }
            </div>

            <button type="submit" class="btn btn-primary">Update Logo</button>
        </form>
    </div>
</div>
