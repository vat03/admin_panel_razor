@page
@model admin_panel_razor.Pages.IndexModel
@{
    ViewData["Title"] = "Homepage";
}

<h1>Dashboard</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Total Register Players
            </div>
            <div class="card-body">
                <h5 class="card-title">0</h5>
                <p class="card-text">Total number of registered players.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Owner Approx Income
            </div>
            <div class="card-body">
                <h5 class="card-title">0 ₹</h5>
                <p class="card-text">Owner's approximate income.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Total Winning Amount
            </div>
            <div class="card-body">
                <h5 class="card-title">0 ₹</h5>
                <p class="card-text">Total amount won by players.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Total Wallet Amount
            </div>
            <div class="card-body">
                <h5 class="card-title">0 ₹</h5>
                <p class="card-text">Total amount in players' wallets.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Total Transactions
            </div>
            <div class="card-body">
                <h5 class="card-title">0</h5>
                <p class="card-text">Total number of transactions.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Total Amount Sent
            </div>
            <div class="card-body">
                <h5 class="card-title">0 ₹</h5>
                <p class="card-text">Total amount sent to players.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Pending Withdraw Requests
            </div>
            <div class="card-body">
                <h5 class="card-title">0</h5>
                <p class="card-text">Total pending withdraw requests.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Approved Withdraw Requests
            </div>
            <div class="card-body">
                <h5 class="card-title">0</h5>
                <p class="card-text">Total approved withdraw requests.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Rejected Withdraw Requests
            </div>
            <div class="card-body">
                <h5 class="card-title">0</h5>
                <p class="card-text">Total rejected withdraw requests.</p>
            </div>
        </div>
    </div>
</div>
