@page
@model admin_panel_razor.Pages.PrivacyPoliciesModel

<h1>Game Settings</h1>
<h4>Privacy Policy</h4>

<div class="row">
    <div class="col-md-3">
        <br />
        <a class="btn btn-outline-primary" href="/GeneralSettings">General Settings</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/LogoSettings">Logo Settings</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/GameConfig">Game Config</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/SocialMedia">Social Media</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/ContactUs">Contact Us</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/AboutUs">About Us</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/TermsAndConditions">Terms & Condition</a>
        <br /><br />
        <a class="btn btn-primary" href="/PrivacyPolicies">Privacy Policy</a>
    </div>

    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label for="Title">Privacy Policy Title</label>
                <input type="text" class="form-control" id="Title" name="PrivacyPolicy.Title" value="@Model.PrivacyPolicy.Title" required />
            </div>
            <div class="form-group">
                <label for="Slug">Privacy Policy Slug</label>
                <input type="text" class="form-control" id="Slug" name="privacyPolicy.Slug" value="@Model.PrivacyPolicy.Slug" required />
            </div>
            <div class="form-group">
                <label for="Description">Privacy Policy Description</label>
                <textarea class="form-control" id="Description" name="privacyPolicy.Description" rows="5" required>@Model.PrivacyPolicy.Description</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update Privacy Policy</button>
        </form>
    </div>
</div>
