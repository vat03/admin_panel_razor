@page
@model admin_panel_razor.Pages.GameConfigModel
@{
    ViewData["Title"] = "Game Config";
}

<h1>Game Settings</h1>
<h4>Game Config</h4>

<div class="row">
    <div class="col-md-3">
        <br />
        <a class="btn btn-outline-primary" href="/GeneralSettings">General Settings</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/LogoSettings">Logo Settings</a>
        <br /><br />
        <a class="btn btn-primary" href="/GameConfig">Game Config</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/SocialMedia">Social Media</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/ContactUs">Contact Us</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/AboutUs">About Us</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/TermsAndConditions">Terms & Condition</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/PrivacyPolicies">Privacy Policy</a>
    </div>

    <div class="col-md-5">
        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="GameConfig.AdminCommission"></label>
                    <input asp-for="GameConfig.AdminCommission" class="form-control" />
                    <span asp-validation-for="GameConfig.AdminCommission" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="GameConfig.SignupBonus"></label>
                    <input asp-for="GameConfig.SignupBonus" class="form-control" />
                    <span asp-validation-for="GameConfig.SignupBonus" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="GameConfig.SupportMail"></label>
                    <input asp-for="GameConfig.SupportMail" class="form-control" />
                    <span asp-validation-for="GameConfig.SupportMail" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="GameConfig.WhatsappLink"></label>
                    <input asp-for="GameConfig.WhatsappLink" class="form-control" />
                    <span asp-validation-for="GameConfig.WhatsappLink" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="GameConfig.YoutubeLink"></label>
                    <input asp-for="GameConfig.YoutubeLink" class="form-control" />
                    <span asp-validation-for="GameConfig.YoutubeLink" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="GameConfig.ApiKey"></label>
                    <input asp-for="GameConfig.ApiKey" class="form-control" />
                    <span asp-validation-for="GameConfig.ApiKey" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="GameConfig.SecretKey"></label>
                    <input asp-for="GameConfig.SecretKey" class="form-control" />
                    <span asp-validation-for="GameConfig.SecretKey" class="text-danger"></span>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Update Game Configuration</button>
        </form>
    </div>
</div>
