@page
@model admin_panel_razor.Pages.WithdrawRequests.IndexModel
@{
    ViewData["Title"] = "Withdraw Requests";
}

<h1>Withdraw Requests</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Player ID</th>
            <th>Payment Method</th>
            <th>Account</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WithdrawRequest)
        {
            <tr>
                <td>@item.RequestId</td>
                <td>@item.PlayerId</td>
                <td>@item.PaymentMethod</td>
                <td>@item.Account</td>
                <td>@item.Amount</td>
                <td>@item.Status</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.RequestId" class="btn btn-secondary">Edit</a>
                    <a asp-page="Details" asp-route-id="@item.RequestId" class="btn btn-primary">Details</a>
                    <a asp-page="Delete" asp-route-id="@item.RequestId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
