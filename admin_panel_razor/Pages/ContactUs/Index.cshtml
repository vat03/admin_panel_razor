@page
@model admin_panel_razor.Pages.ContactUsModel
@{
    ViewData["Title"] = "Contact Us";
}

<h1>Game Settings</h1>
<h4>Contact Us</h4>

<div class="row">
    <div class="col-md-3">
        <br />
        <a class="btn btn-outline-primary" href="/GeneralSettings">General Settings</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/LogoSettings">Logo Settings</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/GameConfig">Game Config</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/SocialMedia">Social Media</a>
        <br /><br />
        <a class="btn btn-primary" href="/ContactUs">Contact Us</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/AboutUs">About Us</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/TermsAndConditions">Terms & Condition</a>
        <br /><br />
        <a class="btn btn-outline-primary" href="/PrivacyPolicies">Privacy Policy</a>
    </div>

    <div class="col-md-6">
        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="PrimaryTollFreeNumber">Primary Toll-Free Number</label>
                    <input type="text" class="form-control" id="PrimaryTollFreeNumber" name="ContactUs.PrimaryTollFreeNumber" asp-for="ContactUs.PrimaryTollFreeNumber" />
                    <span asp-validation-for="ContactUs.PrimaryTollFreeNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="SecondaryTollFreeNumber">Secondary Toll-Free Number</label>
                    <input type="text" class="form-control" id="SecondaryTollFreeNumber" name="ContactUs.SecondaryTollFreeNumber" asp-for="ContactUs.SecondaryTollFreeNumber" />
                    <span asp-validation-for="ContactUs.SecondaryTollFreeNumber" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="PrimaryEmail">Primary Email</label>
                    <input type="email" class="form-control" id="PrimaryEmail" name="ContactUs.PrimaryEmail" asp-for="ContactUs.PrimaryEmail" />
                    <span asp-validation-for="ContactUs.PrimaryEmail" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="SecondaryEmail">Secondary Email</label>
                    <input type="email" class="form-control" id="SecondaryEmail" name="ContactUs.SecondaryEmail" asp-for="ContactUs.SecondaryEmail" />
                    <span asp-validation-for="ContactUs.SecondaryEmail" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label for="Address">Address</label>
                <textarea class="form-control" id="Address" name="ContactUs.Address" asp-for="ContactUs.Address"></textarea>
                <span asp-validation-for="ContactUs.Address" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Update Contact</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
