@page
@model admin_panel_razor.Pages.BidValues.IndexModel
@{
    ViewData["Title"] = "Bid Values";
}

<h1>Bid Values</h1>

<h2>Add New Bid Values</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-page-handler="Create">
            <div class="form-group">
                <label asp-for="NewBidValue " class="control-label"></label>
                <input asp-for="NewBidValue" class="form-control" />
                <span asp-validation-for="NewBidValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>All Bid Values</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Bid Value</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BidValueList)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Value INR</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                            <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>